# Пример файла .env для Docker
# Скопируйте этот файл в .env и заполните значения

# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Database URL
# Для SQLite в Docker (используйте абсолютный путь внутри контейнера):
DATABASE_URL=sqlite+aiosqlite:////app/data/staff_bot.db

# Для PostgreSQL (если используете отдельный контейнер):
# DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/staff_bot

# Admin Chat IDs (можно несколько через запятую)
ADMIN_CHAT_IDS=

# Work Group ID (рабочий чат, можно узнать через @userinfobot)
WORK_GROUP_ID=

# Notification Channel ID (канал уведомлений)
NOTIFICATION_CHANNEL_ID=

